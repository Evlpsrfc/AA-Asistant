<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/add_bill_btn"
        android:id="@+id/bill_list"
        />

    <Button
        android:id="@+id/add_bill_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/close_bill_btn"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="@string/add_bill_item"
        android:backgroundTint="#1AAD19"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/close_bill_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_bill_btn"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="@string/close_bill"
        android:backgroundTint="#AAAAAA"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:targetApi="lollipop" />

</androidx.constraintlayout.widget.ConstraintLayout>