<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/clear_users_btn"
        android:id="@+id/users_list"
        />

    <Button
        android:id="@+id/add_user_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clear_users_btn"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="@string/add_user_item"
        android:backgroundTint="#1AAD19"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/clear_users_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_user_btn"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="@string/clear_users"
        android:backgroundTint="#AAAAAA"
        tools:targetApi="lollipop" />

</androidx.constraintlayout.widget.ConstraintLayout>